<!DOCTYPE html>
<html lang="en">

<head>
    <title>Spencer's Bookstore</title>
    <meta name="viewport" content="width=device-width" />
    <!--Connect Bootstrap-->
    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/main.css" rel="stylesheet" />
    <!--FontAwesome-->
    <script src="https://kit.fontawesome.com/cfcadfc0e5.js" crossorigin="anonymous"></script>

</head>
<body>

    <!--TITLE-->
    <div class="bg-dark text-white text-center p-2">
        <h1>@ViewBag.Title</h1>
    </div>

    <!--SUBTITLE-->
    <div class="text-center">
        <h3 class="bg-dark text-white text-center">@ViewBag.Subtitle</h3>
    </div>

    <div class="bg-dark text-white p-2">
        <div class="container-fluid">
            <div class="row">
                <div class="col navbar-brand"></div>
                <div class="col-6 text-right">
                    <vc:purchase-summary/>
                </div>
            </div>
        </div>
    </div>

    <!--NAVIGATION -
     <div class="topnav">
         <a class="active" asp-controller="Home" asp-action="Index">Home</a>
         <a asp-controller="Home" asp-action="ResturantList">Submit Your Favorite Resturant</a>

     </div>
        -->

    <div>
        @RenderBody()
    </div>


    <br />
    <br />
    <br />

    <!--FOOTER-->
    <footer>
        Spencer's Bookstore &copy; 2021
    </footer>

</body>
</html>



