@model Booklist
<!--TABLE-->
   <tr>
            <td class="font-weight-bold">@Model.BookID</td>
            <td><mark>@Model.BookTitle</mark></td>
            <td>@Model.AuthorFirst @Model.AuthorLast</td>
            <td>@Model.Publisher</td>
            <td>@Model.ISBN</td>
            <td>@Model.Classification, @Model.Category</td>
            <td>@Model.PageNum</td>
            <td class="badge badge-pill badge-dark">$@Model.Price</td>
            <td>
                <form id="@Model.BookID" asp-page="/Purchase" method="post">
                    <input type="hidden" asp-for="BookID" />
                    <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                    <span class="card-text p-1">
                        <button type="submit" class="btn-success btn-sm pull-right" style="float:right">
                            Add to Cart
                        </button>
                    </span>
                </form>

            </td>


   </tr>
 



